<?xml version="1.0" encoding="utf-8"?>

<!--
    Definición del contenido del catalogo principal de todos los productos.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Contenedor vertical para el catálogo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Título del catalogo -->
        <TextView
            android:id="@+id/tituloCatalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_catalogo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Grid de productos. Lo hago en dos columnas -->
        <GridLayout
            android:id="@+id/gridProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal">

            <!--
            Cada producto está contenido en un LinearLayout que simula una tarjeta.
            Lo que incluyo es: Una imagen, su nombre y el precio.
            -->

            <!-- Producto 1 : Darth Vader -->
            <LinearLayout
                android:id="@+id/producto1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:elevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/vader"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/producto_1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/precio_1"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Producto 2 : Iron Man -->
            <LinearLayout
                android:id="@+id/producto2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:elevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/iron"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/producto_2"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/precio_2"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Producto 3: Dark Souls -->
            <LinearLayout
                android:id="@+id/producto3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:elevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/souls"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/producto_3"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/precio_3"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Producto 4: The Last Of Us -->
            <LinearLayout
                android:id="@+id/producto4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:elevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/last"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/producto_4"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precio_4"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Producto 5 : The Killing Joke -->
