<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Éxito -->
        <TextView
            android:id="@+id/tituloExito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/compra_exitosa"
            android:textColor="#388E3C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Introducción al resumen de la comprad -->
        <TextView
            android:id="@+id/textoResumenIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resumen_intro"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Los productos -->
        <LinearLayout
            android:id="@+id/contenedorProductosResumen"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Total de las compras-->
        <TextView
            android:id="@+id/totalCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_compra_default"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp" />

        <!-- Nombre y tarjeta -->
        <TextView
            android:id="@+id/textoTitularTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Dirección -->
        <TextView
            android:id="@+id/textoDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnVolverCatalogoResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volver_catalogo"
            android:backgroundTint="#3D90D7"
            android:textColor="#ffffff" />
    </LinearLayout>
</ScrollView>
